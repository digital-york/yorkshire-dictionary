<div class="container">
	<div class="row">
		<div class="col">
			<h1><%= @source_material.title %></h1>
			<p><%= @source_material.description %></p>
		</div>
	</div>

	<% if @source_material.words.present? %>
		<h2>Associated words</h2>
		<div class="row">
			<div class="col">
				<% @source_material.words.each do |word| %>
					<%= link_to word.text, word, class: 'place-word' %>
				<% end %>
			</div>
		</div>
	<% end %>

	<div class="row">
		<div class="col">
			<%= link_to 'Back', source_materials_path %>
		</div>
	</div>
</div>
