<%= label_tag :search, "Word starts with:" %>
<div class="alphabet-button">
	<input type="radio" name="letters" value="" id="na" autocomplete="off">
	<label for="na">
		ANY
	</label>

	<% ('A'..'Z').each do |x| %>
		<input type="radio" value="<%= x %>" name="letter" id="<%= x %>" autocomplete="off"> 
		<label for="<%= x %>" >
			<%= x %>
		</label>
	<% end %>

	<input type="radio" name="letter" value="-" id="-" autocomplete="off">
	<label for="-">
		-
	</label>
</div>