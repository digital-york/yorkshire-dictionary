<div class="sources-div">
	<span class="sources-prefix">
		sources
	</span>
	<% sources.each do  |source| %>
		<span class="source">
			<% source_title = source&.title %>
			<% display_title = nil %>
			<% if source_title&.present? %>
				<% display_title = source_title&.truncate 15 %>
			<% else %>
				<% display_title = 'Untitled source' %>
			<% end %>

			<%= link_to display_title, source, 'data-placement': "top", 'data-toggle': "tooltip", title: source_title %>
		</span>
	<% end %>
</div>

<script>
	$(function () {
	$('[data-toggle="tooltip"]').tooltip()
	})
</script>